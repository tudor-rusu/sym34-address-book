{% extends "AddressBookBundle::base.html.twig" %}

{% block title %}Add contact{% endblock %}

{% block body %}
<div class="container main-container">
    <div class="row">
        <div class="col-md-12">
            <h2>Add new contact</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, {'attr': {'class': 'form-horizontal', 'id': 'add-contact-form', 'role': 'form'}}) }}
                {{ form_widget(form) }}
                <div class="form-group">
                    <div class="col-sm-2">
                        <a href="{{ path('contact_index') }}" class="btn btn-default">Back to the list</a>
                    </div>
                    <div class="col-sm-10 btn-back-to-list">
                        <input type="submit" value="Create" class="btn btn-success"/>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
