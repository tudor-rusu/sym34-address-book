<div class="row">
    <div class="col-md-12">
        <a href="{{ path('contact_new') }}" class="btn btn-success pull-right">Create a new contact Â»</a>
    </div>
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Birthday</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>{{ contact.firstname }} {{ contact.lastname }}</td>
                        <td>{{ contact.address }}<br />{{ contact.zip }} {{ contact.city }}<br />{{ contact.country }}</td>
                        <td>{{ contact.phonenumber }}</td>
                        <td>{% if contact.birthday %}{{ contact.birthday|date('d M Y') }}{% endif %}</td>
                        <td>{{ contact.email }}</td>
                        <td>
                            <a href="{{ path('contact_show', { 'id': contact.id }) }}" type="button" class="btn btn-info btn-sm">show</a>
                            <a href="{{ path('contact_edit', { 'id': contact.id }) }}" type="button" class="btn btn-primary btn-sm">edit</a>
                            <a href="{{ path('contact_remove', { 'id': contact.id }) }}" type="button" class="btn btn-danger btn-sm">delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-12">
        <div class="navigation text-center">
            {{ knp_pagination_render(contacts) }}
        </div>
    </div>
</div>